// Prisma Schema for Didact LMS
// Single-tenant LMS for individual course creators

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// Enums
// =============================================================================

enum Role {
  ADMIN
  STUDENT
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum StructureMode {
  MODULAR   // Course has modules containing lessons
  FLAT      // Course has only lessons (no modules)
  FREESTYLE // Mixed - some lessons in modules, some standalone
}

enum SubmissionStatus {
  PENDING
  PASSED
  REJECTED
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// =============================================================================
// User
// =============================================================================

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String?
  avatarUrl    String?  @map("avatar_url")
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  enrollments         Enrollment[]
  progress            Progress[]
  quizAttempts        QuizAttempt[]
  submissions         Submission[]
  orders              Order[]
  posts               Post[]
  comments            Comment[]
  threads             Thread[]             @relation("UserThreads")
  adminThreads        Thread[]             @relation("AdminThreads")
  messages            Message[]
  passwordResetTokens PasswordResetToken[]

  @@map("users")
}

// =============================================================================
// Course
// =============================================================================

model Course {
  id                    String       @id @default(cuid())
  title                 String
  slug                  String       @unique
  description           String?      @db.Text
  salesDescription      String?      @map("sales_description") @db.Text
  thumbnailUrl          String?      @map("thumbnail_url")
  price                 Int          @default(0) // Price in cents/grosze
  currency              String       @default("PLN")
  structureMode         StructureMode @default(MODULAR) @map("structure_mode")
  status                CourseStatus @default(DRAFT)
  enforceSequential     Boolean      @default(false) @map("enforce_sequential")
  requireAssignmentPass Boolean      @default(false) @map("require_assignment_pass")
  createdAt             DateTime     @default(now()) @map("created_at")
  updatedAt             DateTime     @updatedAt @map("updated_at")

  // Relations
  modules     Module[]
  lessons     Lesson[]
  enrollments Enrollment[]
  orders      Order[]
  posts       Post[]

  @@map("courses")
}

// =============================================================================
// Module (optional grouping of lessons within a course)
// =============================================================================

model Module {
  id        String   @id @default(cuid())
  courseId  String   @map("course_id")
  title     String
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons Lesson[]

  @@map("modules")
}

// =============================================================================
// Lesson
// =============================================================================

model Lesson {
  id          String   @id @default(cuid())
  courseId    String   @map("course_id")
  moduleId    String?  @map("module_id") // Optional - can be standalone
  title       String
  contentHtml String?  @map("content_html") @db.Text
  videoUrl    String?  @map("video_url")
  videoIframe String?  @map("video_iframe") @db.Text
  attachments Json?    // Array of {name, url, size, type}
  dripDays    Int?     @map("drip_days") // Days after enrollment when lesson unlocks (null = immediate)
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  course   Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  module   Module?    @relation(fields: [moduleId], references: [id], onDelete: SetNull)
  progress Progress[]
  quiz     Quiz?
  homework Homework?

  @@map("lessons")
}

// =============================================================================
// Enrollment (user enrolled in a course)
// =============================================================================

model Enrollment {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  courseId  String   @map("course_id")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("enrollments")
}

// =============================================================================
// Progress (user's progress in a lesson)
// =============================================================================

model Progress {
  id          String    @id @default(cuid())
  userId      String    @map("user_id")
  lessonId    String    @map("lesson_id")
  completed   Boolean   @default(false)
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("progress")
}

// =============================================================================
// Page (static CMS pages)
// =============================================================================

model Page {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  contentHtml     String?  @map("content_html") @db.Text
  metaDescription String?  @map("meta_description")
  published       Boolean  @default(false)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("pages")
}

// =============================================================================
// Quiz (assessment for a lesson)
// =============================================================================

model Quiz {
  id           String   @id @default(cuid())
  lessonId     String   @unique @map("lesson_id")
  passingScore Int      @default(70) @map("passing_score") // Percentage required to pass
  maxRetries   Int      @default(3) @map("max_retries") // 0 = unlimited
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  lesson    Lesson        @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  questions Question[]
  attempts  QuizAttempt[]

  @@map("quizzes")
}

// =============================================================================
// Question (quiz question)
// =============================================================================

model Question {
  id            String   @id @default(cuid())
  quizId        String   @map("quiz_id")
  questionText  String   @map("question_text") @db.Text
  options       Json     // Array of option strings
  correctOption Int      @map("correct_option") // Index of correct option (0-based)
  order         Int      @default(0)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@map("questions")
}

// =============================================================================
// QuizAttempt (user's attempt at a quiz)
// =============================================================================

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  quizId    String   @map("quiz_id")
  score     Int      // Percentage score
  passed    Boolean
  answers   Json?    // Array of user's answers (option indices)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@map("quiz_attempts")
}

// =============================================================================
// Homework (assignment for a lesson)
// =============================================================================

model Homework {
  id        String   @id @default(cuid())
  lessonId  String   @unique @map("lesson_id")
  prompt    String   @db.Text
  allowFile Boolean  @default(true) @map("allow_file")
  allowText Boolean  @default(true) @map("allow_text")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  lesson      Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  submissions Submission[]

  @@map("homework")
}

// =============================================================================
// Submission (user's homework submission)
// =============================================================================

model Submission {
  id          String           @id @default(cuid())
  userId      String           @map("user_id")
  homeworkId  String           @map("homework_id")
  contentText String?          @map("content_text") @db.Text
  fileUrl     String?          @map("file_url")
  status      SubmissionStatus @default(PENDING)
  feedback    String?          @db.Text
  gradedAt    DateTime?        @map("graded_at")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  homework Homework @relation(fields: [homeworkId], references: [id], onDelete: Cascade)

  @@map("submissions")
}

// =============================================================================
// Order (purchase record)
// =============================================================================

model Order {
  id               String      @id @default(cuid())
  userId           String      @map("user_id")
  courseId         String      @map("course_id")
  amount           Int         // Amount in cents/grosze
  currency         String      @default("PLN")
  stripeSessionId  String?     @unique @map("stripe_session_id")
  stripePaymentId  String?     @map("stripe_payment_id")
  invoiceData      Json?       @map("invoice_data") // Name, address, NIP for invoice
  status           OrderStatus @default(PENDING)
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime    @updatedAt @map("updated_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("orders")
}

// =============================================================================
// Post (course feed post)
// =============================================================================

model Post {
  id        String   @id @default(cuid())
  courseId  String   @map("course_id")
  userId    String   @map("user_id")
  content   String   @db.Text
  imageUrl  String?  @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  course   Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments Comment[]

  @@map("posts")
}

// =============================================================================
// Comment (comment on a post)
// =============================================================================

model Comment {
  id        String   @id @default(cuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

// =============================================================================
// Thread (private message thread)
// =============================================================================

model Thread {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  adminId   String?  @map("admin_id") // Admin assigned to this thread
  subject   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user     User      @relation("UserThreads", fields: [userId], references: [id], onDelete: Cascade)
  admin    User?     @relation("AdminThreads", fields: [adminId], references: [id], onDelete: SetNull)
  messages Message[]

  @@map("threads")
}

// =============================================================================
// Message (private message in a thread)
// =============================================================================

model Message {
  id        String   @id @default(cuid())
  threadId  String   @map("thread_id")
  senderId  String   @map("sender_id")
  content   String   @db.Text
  readAt    DateTime? @map("read_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  sender User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@map("messages")
}

// =============================================================================
// PasswordResetToken (for password reset flow)
// =============================================================================

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}
